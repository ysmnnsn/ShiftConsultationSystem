@model List<ShiftConsultationSystem.Models.ConsultationRequest>

<h2>Pending consultation requests for your hospital and department.</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Requesting Doctor</th>
                <th>Requesting Doctor's Hospital</th>
                <th>Requesting Doctor's Department</th>
                <th>Hospital (Request for)</th> <!-- This is the hospital the consultation is requested for -->
                <th>Patient Name</th>
                <th>Room Number</th>
                <th>Consultation Note</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@(request.Requester?.Name ?? "Unknown Doctor")</td> <!-- Display requesting doctor's name -->
                    <td>@(request.Requester?.Hospital?.HospitalName ?? "Unknown Hospital")</td> <!-- Display requesting doctor's hospital -->
                    <td>@(request.Requester?.Department?.DepartmentName ?? "Unknown Department")</td>
                    <td>@(request.Hospital?.HospitalName ?? "Unknown Hospital")</td> <!-- Display hospital where the consultation is requested -->
                    <td>@request.PatientName</td> <!-- Display patient's name -->
                    <td>@request.RoomNumber</td> <!-- Display patient's room number -->
                    <td>@request.ConsultationNote</td> <!-- Display the consultation note -->
                    <td>
                        @if (User.IsInRole("admin") || User.IsInRole("doctor"))
                        {
                            <form asp-action="AcceptConsultation" asp-controller="Doctor" method="post">
                                <input type="hidden" name="consultationRequestId" value="@request.ConsultationRequestId" />
                                <button type="submit" class="btn btn-success">Accept</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No pending consultation requests at the moment.</p>
}
