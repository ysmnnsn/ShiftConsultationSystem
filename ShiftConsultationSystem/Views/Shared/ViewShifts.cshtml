@{
    ViewData["Title"] = "View Shifts";
}

<h2>View Shifts</h2>

@if (Model.Count == 0)
{
    <p>No shifts available.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Assigned Doctor</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var shift in Model)
            {
                <tr>
                    <td>@shift.ShiftDate.ToString("dd/MM/yyyy")</td>
                    <td>@(shift.User?.Name ?? "Unassigned")</td>
                </tr>
            }
        </tbody>
    </table>
}
