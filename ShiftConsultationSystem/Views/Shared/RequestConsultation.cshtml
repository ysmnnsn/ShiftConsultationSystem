@model ShiftConsultationSystem.Models.ConsultationRequest

<h2>Request a Consultation</h2>

<form asp-action="RequestConsultation" method="post">
    <div class="form-group">
        <label for="PatientName">Patient Name</label>
        <input type="text" name="patientName" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="RoomNumber">Room Number</label>
        <input type="text" name="roomNumber" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Department">Select Department</label>
        <select name="departmentId" class="form-control">
            @foreach (var dept in ViewBag.Departments)
            {
                <option value="@dept.DepartmentId">@dept.DepartmentName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Hospital">Select Hospital</label>
        <select name="hospitalId" class="form-control">
            @foreach (var hospital in ViewBag.Hospitals)
            {
                <option value="@hospital.HospitalId">@hospital.HospitalName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="ConsultationNote">Note / Extra information</label>
        <textarea name="consultationNote" class="form-control" rows="3"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit Request</button>
</form>
