@model List<ShiftConsultationSystem.Models.User>

<div class="container mt-5">
    <h2 class="text-center text-primary">Manage Users</h2>

    <table class="table table-striped table-bordered mt-4">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Username</th>
                <th>Department</th>
                <th>Hospital</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Username</td>
                    <td>@user.Department?.DepartmentName</td>
                    <td>@user.Hospital?.HospitalName</td>
                    <td>
                        <a href="/Admin/DeleteUser/@user.UserId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/Admin/AddUser" class="btn btn-success btn-block mt-4">Add New User</a>

    @if (User.IsInRole("admin"))
    {
        <a href="/Admin/AdminHomepage" class="btn btn-secondary">Back to Dashboard</a>
    }
    else if (User.IsInRole("doctor"))
    {
        <a href="/Doctor/DoctorHomepage" class="btn btn-secondary">Back to Dashboard</a>
    }

</div>
