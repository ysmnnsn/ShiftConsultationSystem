@model ShiftConsultationSystem.Models.User

<div class="container mt-5">
    <h2 class="text-center text-primary">Delete User</h2>

    <div class="alert alert-danger mt-4">
        Are you sure you want to delete user <strong>@Model.Name</strong>?
    </div>

    <form asp-action="DeleteUserConfirmed" method="post">
        <input type="hidden" name="userId" value="@Model.UserId" />
        <button type="submit" class="btn btn-danger btn-block">Yes, Delete</button>
    </form>

    <a href="/Admin/ViewUsers" class="btn btn-secondary btn-block mt-3">Cancel</a>

    @if (User.IsInRole("admin"))
    {
        <a href="/Admin/AdminHomepage" class="btn btn-secondary">Back to Dashboard</a>
    }
    else if (User.IsInRole("doctor"))
    {
        <a href="/Doctor/DoctorHomepage" class="btn btn-secondary">Back to Dashboard</a>
    }

</div>
