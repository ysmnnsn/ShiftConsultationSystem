<div class="container mt-5">
    <h2 class="text-center text-primary">Admin Dashboard</h2>

    <!-- User Management Section -->
    <div class="row mt-4">
        <div class="col-md-4 mb-3">
            <h4 class="text-center">User Management</h4>
            <a href="/Admin/AddUser" class="btn btn-success btn-block mb-2">Add New User</a>
            <a href="/Admin/ViewUsers" class="btn btn-danger btn-block">Manage Users</a> <!-- View and delete users -->
        </div>

        <!-- Shift Management Section -->
        <div class="col-md-4 mb-3">
            <h4 class="text-center">Shift Management</h4>
            <a href="/Admin/ViewShifts" class="btn btn-info btn-block mb-2">View All Shifts</a>
            <a href="/Admin/EditShifts" class="btn btn-warning btn-block mb-2">Edit Shifts</a>
            <form asp-action="RedistributeShifts" method="post">
                <button type="submit" class="btn btn-primary btn-block">Redistribute Shifts</button>
            </form>
        </div>

        <!-- Consultation Management Section -->
        <div class="col-md-4 mb-3">
            <h4 class="text-center">Consultation Management</h4>
            <a href="/Admin/RequestConsultation" class="btn btn-info btn-block mb-2">Request Consultation</a>
            <a href="/Admin/ViewPendingConsultations" class="btn btn-warning btn-block mb-2">View Pending Consultations</a>
            <a href="/Admin/ViewConsultationHistory" class="btn btn-info btn-block">View Consultation History</a>
        </div>
    </div>

    <!-- Department and Hospital Management Section -->
    <div class="row mt-3">
        <div class="col-md-4 mb-3">
            <h4 class="text-center">Department Management</h4>
            <a href="/Admin/ManageDepartments" class="btn btn-warning btn-block">Manage Departments</a>
        </div>

        <div class="col-md-4 mb-3">
            <h4 class="text-center">Hospital Management</h4>
            <a href="/Admin/ManageHospitals" class="btn btn-warning btn-block">Manage Hospitals</a>
        </div>
    </div>

    <!-- Authentication Buttons Section -->
    <div class="row mt-3">
        <div class="col-md-4 offset-md-4 text-center">
            <h4 class="text-center">Account</h4>
            @if (User.Identity.IsAuthenticated)
            {
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-danger">Logout</button>
                </form>
            }
            else
            {
                <a href="/Account/Login" class="btn btn-primary btn-block">Login</a>
            }
        </div>
</div>
