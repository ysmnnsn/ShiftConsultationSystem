<div class="container mt-5">
    <h2 class="text-center text-primary">Login</h2>

    <form asp-action="Login" method="post" class="mt-4">
        <div class="form-group">
            <label for="Username">Username</label>
            <input name="username" class="form-control" placeholder="Enter username" />
            <span class="text-danger">@ViewBag.UsernameError</span>
        </div>

        <div class="form-group">
            <label for="Password">Password</label>
            <input name="password" type="password" class="form-control" placeholder="Enter password" />
            <span class="text-danger">@ViewBag.PasswordError</span>
        </div>

        <div class="form-check">
            <input name="rememberMe" class="form-check-input" type="checkbox" />
            <label class="form-check-label">Remember me</label>
        </div>

        <button type="submit" class="btn btn-primary btn-block mt-4">Login</button>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <p class="text-danger mt-3">@ViewBag.ErrorMessage</p>
        }
    </form>
</div>
